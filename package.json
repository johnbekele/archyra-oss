{
  "name": "archyra",
  "version": "1.0.0",
  "description": "Archyra - Beautiful animated components for React/Next.js - loading states, e-commerce interactions, chat UIs with MCP server support.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "archyra": "./dist/mcp/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./mcp": "./dist/mcp/server.js",
    "./mcp/server": "./dist/mcp/server.js",
    "./mcp/server.js": "./dist/mcp/server.js"
  },
  "files": [
    "dist",
    "mcp",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:lib": "node scripts/build.js",
    "build:mcp": "npm run build:mcp:server && npm run build:mcp:cli",
    "build:mcp:server": "npx esbuild mcp/server.ts --bundle --platform=node --format=cjs --outfile=dist/mcp/server.js --banner:js='#!/usr/bin/env node'",
    "build:mcp:cli": "npx esbuild mcp/cli.ts --bundle --platform=node --format=cjs --outfile=dist/mcp/cli.js --banner:js='#!/usr/bin/env node'",
    "mcp": "node dist/mcp/server.js",
    "mcp:dev": "npx tsx mcp/server.ts",
    "prepublishOnly": "npm run build:lib && npm run build:mcp"
  },
  "keywords": [
    "archyra",
    "react",
    "nextjs",
    "animation",
    "ai",
    "vibe-coding",
    "loading",
    "spinner",
    "typescript",
    "components",
    "ecommerce",
    "cart",
    "product-card",
    "wishlist",
    "countdown-timer",
    "chat",
    "framer-motion",
    "tailwindcss"
  ],
  "author": "johnbekele",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnbekele/archyra-oss"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "zustand": "^5.0.9"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "next": "^14.2.0",
    "postcss": "^8.4.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shadcn": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
